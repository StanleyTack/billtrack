<div class="page-header">
  <h1>
    My Bills
    <a href="/bills/new" class="btn btn-lg btn-success">New Bill</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Amount</th>
        <th>Payer</th>
        <th>Description</th>
        <th>Beneficiary</th>
        <th>Actions</th>
      </tr>

      <% @balances.each do |balance| %>
      <tr>
        <td><%= balance.amount %></td>
        <td><%= User.find_by(id: balance.payer_id).email%></td>
        <td><%= balance.description %></td>
        <td><%= User.find_by(id: balance.beneficiary_id).email %></td>
        <td>
          <a href="/bills/<%= balance.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_bill/<%= balance.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
